[user]
	name = Cooper Mayne
	email = coopermayne@gmail.com
[color]
	ui = true
[alias]
	st = status -sb -uall
	lg = log --decorate --pretty=oneline --abbrev-commit --graph
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
        cm = commit -m
        ca = commit -m --ammend
        br = branch
        co = checkout
        df = diff
        phm = push heroku master
[github]
	user = coopermayne
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[push]
	default = simple
